{
  "manifest_version"  : 2,
  "name"              : "Notify Me",
  "description"       : "Notification aggregation browser plugin",
  "short_name"        : "NM",
  "version"           : "1.0",
  "icons"             :{
        "256":"images/logo.png"
  },

  "browser_action"    : {
    "default_popup" : "application/HTML/index.html",
    "default_icon"  : "images/logo.png",
    "default_title":  "Notify Me"
  },

  "content_scripts":[
    {
      "js":["application/JS/standBy.js"],
      "matches":["https://api.twitter.com/oauth/*"],
      "run_at":"document_start"
    }
  ],

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "debugger",
    "storage",
    "cookies",
    "https://api.twitter.com/",
    "http://35.204.202.104:8080/"
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}